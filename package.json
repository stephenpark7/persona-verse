{
  "name": "twitter-clone",
  "version": "1.0.0",
  "description": "A twitter clone, for learning purposes.",
  "main": "index.js",
  "scripts": {
    "install-deps": "cd client && npm install && cd ../server && npm install",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "docker-build": "docker-compose build",
    "docker-start": "docker-compose up -d",
    "docker-stop": "docker-compose down",
    "docker-restart": "docker-compose restart",
    "docker-server-logs": "docker-compose logs node_app -f",
    "docker-client-logs": "docker-compose logs twitter_react_app -f"
  },
  "author": "Stephen Park",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
