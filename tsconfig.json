  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@my-scope/*": ["/*"]
    },
    "outDir": "dist"
  },
  "include": ["client/**/*", "server/**/*"],
}
