{
  "include": ["./src/**/*", "vitest.config.mts", "../shared/**/*"],
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "composite": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "../",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "useDefineForClassFields": true,
    "types": ["node", "vitest/globals", "vitest"],
    "paths": {
      "@db": ["./src/db/index"],
      "@db/models": ["./src/db/sequelize/models/index"],
      "@controllers": ["./src/controllers/index"],
      "@factories": ["./src/tests/factories/index"],
      "@middleware": ["./src/middleware/index"],
      "@models": ["./src/models/index"],
      "@routes": ["./src/routes/index"],
      "@trpc": ["./src/trpc/index"],
      "@utils": ["./src/utils/index"],
      "@shared/schemas": ["../shared/src/schemas/index"],
      "@shared/types": ["../shared/src/types/index"],
      "@tests/factories": ["./src/tests/factories/index"]
    }
  }
}
