{
  "compilerOptions": {
    "lib": [ "es6" ],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": false,
    "composite": true,
    "esModuleInterop": true,
    "types": [ "express", "express-session", "jest" ]
  },
  "include": [ "src/**/*", "../shared/**/*" ]
}
