{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "types": [ "node", "vite/client", "@testing-library/jest-dom", "@vitest/browser/providers/playwright" ]
  },
  "include": [ "vite.config.ts", "vitest.config.ts", "playwright.config.ts" ]
}
